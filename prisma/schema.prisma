generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Game {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  status   String
  board    String[]
  turn     String
  player   Player   @relation(fields: [playerId], references: [id])
  playerId String   @db.ObjectId
}

model Player {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  games    Game[]
}
